<div id="banner" class="animated fadeInDown" style="background-image: url('../img/adminDashboard.png');">
    <div   div id="profilePicCont">
        <div class="animated fadeInUp delay-1s"><i class="fa fa-pencil-alt"></i></div>
        <img class="animated fadeIn delay-1s" src="../img/DefaultProPic.png" alt="default profile Image">
    </div>
    <div id="proName" style="background:#ffffff;color:#215093;padding:5px;border-radius:10px;">{{adminInfo.firstName}} {{adminInfo.lastName}}<a href="#" id="adminIcon"><i class="fa fa-cog"></i></a></div>
    <section>
        <div id="ProductControllerButton" style="color:#D8E8FF;background: #6673AD;">Products</div>
        <div id="CategoriesControllerButton" style="color:#D8E8FF;background: #6673AD;">Categories</div>
    </section>
</div>
<div id="adminDashboardProducts">
    <ul>
        <li class="fancyLine" id="viewProductButton"><i class="fa fa-eye"></i>&nbsp;<a href="view-item">View Products</a></li>
        <li class="fancyLine" id="addProductButton"><i class="fa fa-plus-circle"></i>&nbsp;<a href="add-item">Add Products</a></li>
        {{!-- <li class="fancyLine" id="editProductButton"><i class="fa fa-edit"></i>&nbsp;<a href="edit-item">Edit Products</a></li> --}}
        {{!-- <li class="fancyLine" id="editProductButton"><i class="fa fa-edit"></i>&nbsp;<a href="delete-item">Delete Products</a></li> --}}
    </ul>
</div>
<div id="adminDashboardCategory" style="display:none">
    <ul>
            <li class="fancyLine" id="viewcategoryButton"><i class="fa fa-eye"></i>&nbsp;<a href="/admin/view-category">View Categories</a></li>
            <li class="fancyLine" id="addCategoryButton"><i class="fa fa-plus-circle"></i>&nbsp; <a href="/admin/add-category">Add Category</a></li>
            <li class="fancyLine" id="editCategoryButton"><i class="fa fa-edit"></i>&nbsp; <a href="/admin/edit-category">Edit Category</a></li>
            <li class="fancyLine" id="editCategoryButton"><i class="fa fa-edit"></i>&nbsp; <a href="/admin/delete-category">Delete Category</a></li>
    </ul>
</div>
<div id="addNewProducts">
    <div id="loginFormContainer" class="animated fadeIn" style="padding:0px 30px 10px 30px">   
        {{#if displayMessage}}           
            <div class="animated slideInRight" id="ProductServerMessage">{{this.displayMessage}}</div>
        {{/if}}    
        <form action="/item/addItem" method="POST" enctype="multipart/form-data">
        <legend style="font-size:2rem;font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif">Add a product</legend>
            <div class="formContainer">
                <label for="title">Title</label><br/>
                <input class="forminput" type="text" name="title" id="title">
            </div>
            <div class="formContainer">
                <label for="description">Description</label><br/>
                <input class="forminput" type="text" name="description" id="description">
            </div>
            <div class="formContainer">
                <label for="price">Price</label><br/>
                <input class="forminput" type="text" name="price" id="price">
            </div>
            <div class="formContainer">
                <label for="costPrice">Cost Price</label><br/>
                <input class="forminput" type="text" name="costPrice" id="costPrice">
            </div>
            <div class="formContainer">
                <label for="quantity">Quantity</label><br/>
                <input class="forminput" type="text" name="quantity" id="quantity">
            </div>
            <div class="formContainer">
                <label for="category">Category</label><br/>
                <select class="forminput" name="category" id="category">
                    {{#if categoryData}}
                        {{#each categoryData}}
                            <option value="{{this.categoryId}}">{{this.categoryName}}</option>
                        {{/each}}
                    {{/if}}
                </select>
                <div class="formContainer" style="background:none">
                    <label for="prodImg">Product Images</label><br/>
                    <input style="background:none;border:none;box-shadow:none" class="forminput" type="file" name="prodImg" id="prodImg" multiple required>
                </div>
                <div class="formContainer">
                    <label for="min">Min Quantity</label><br/>
                    <input class="forminput" type="text" name="min" id="min">
                </div>
                <div class="formContainer">
                    <label for="min">Max Quantity</label><br/>
                    <input class="forminput" type="text" name="max" id="max">
                </div>
                <div class="formContainer" style="background:none">
                    <label for="min">Product Description Document (.doc/.docx)</label><br/>
                    <input style="background:none;border:none;box-shadow:none" class="forminput" type="file" name="productDocument" id="productDocument">
                </div>
            </div>
            <div class="submitContainer">
                <input type="submit" name="submit" id="submit" value="Continue">
            </div>
        </form>
    </div>
</div>
<script>
    const ProductControllerButton = document.querySelector("#ProductControllerButton");
    const CategoriesControllerButton = document.querySelector("#CategoriesControllerButton");

    const adminDashboardProducts = document.querySelector("#adminDashboardProducts");
    const adminDashboardCategory = document.querySelector("#adminDashboardCategory");

    ProductControllerButton.addEventListener("click",()=>{
        adminDashboardCategory.style.display = "none";
        adminDashboardProducts.style.display = "grid";
    });

    CategoriesControllerButton.addEventListener("click",()=>{
        adminDashboardCategory.style.display = "grid";
        adminDashboardProducts.style.display = "none";
    });
</script>