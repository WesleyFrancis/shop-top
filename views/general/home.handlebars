<div class="categoryHeader"> 
    <h1><span>New Additions</span></h1>
</div>
<div id="newItemList">
    {{#if prodData}}
        {{#each prodData}}
            <div class="productContainer">
            <div class="prodHeader">
                <div class="headerLeft">
                    <i class="fa fa-thumbs-up"></i>&nbsp;<span>{{this.likes}}</span>
                </div>
                <div class="headerRight">
                    Best Seller
                </div>
            </div>
            <div class="prodImgCont">
                <a href="/products/{{this.productCode}}">
                    <img class="prodImg" src="{{this.imgLocation}}" alt="image">
                </a>
            </div>
            <div class="prodDesc">
                {{this.description}} &hellip;
                <div class="prodCategory">
                    {{this.categoryId}}
                </div>
            </div>
            <div class="prodActions">
                <div class="watchLater">
                    {{#if ../userinfo}}
                        <a href="/item/watchlater/{{../userinfo.userId}}/{{this.productCode}}"><i class="fa fa-stopwatch"></i>&nbsp;Watch Later</a>
                    {{else}}
                        <a href="/auth/login/"><i class="fa fa-stopwatch"></i>&nbsp;Login to save</a>
                    {{/if}}
                </div>
                <div class="AddCart">
                    {{#if ../userinfo}}
                        <a href="/cart/add/{{this.productCode}}"><i class="fa fa-cart-plus"></i>&nbsp;Add to cart</a>  
                    {{else}}
                        <a href="/auth/login/"><i class="fa fa-stopwatch"></i>&nbsp;Login for cart</a>
                    {{/if}}
                      
                </div>
            </div>
            <div class="prodFooter">
                TT $300.00
            </div>
        </div>
        {{/each}}
    {{else}}
        nothing
    {{/if}}
