            {{this.productName}} &hellip;
            <div class="prodCategory">
                {{this.category}}
            </div>
        </div>
        <div class="prodActions">
            <div class="watchLater">
                <a href="/prod/watch/{{this.prodId}}"><i class="fa fa-stopwatch"></i>&nbsp;Watch Later</a>
            </div>
            <div class="AddCart">
                <a href="/cart/add/{{this.prodId}}"><i class="fa fa-cart-plus"></i>&nbsp;Add to cart</a>    
            </div>
        </div>
        <div class="prodFooter">
            TT ${{this.prodPrice}}
        </div>
    </div>
    {{/each}}
